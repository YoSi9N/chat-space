.main__content__messages
 .main__content__messages--poster
  .main__content__messages--poster--name
   = message.user.name
  .main__content__messages--poster--time
   = message.created_at.strftime("%Y/%m/%d %H:%M")
 - if message.text.present?  
  .main__content__messages--text
   = message.text
 = image_tag message.image.url, class: "aaaa" if message.image.present?
