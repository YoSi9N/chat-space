.main
 .main__header
  .main__header__left
   .main__header__left--name
    = @group.name
    .main__header__left--member
     Menber:
     - @group.group_users.each do |group_user|
      .main__header__left--member--list
       = group_user.user.name
  .main__header__right
   = link_to edit_group_path(@group.id), class: "main__header__right--edit" do
    Edit
 .main__content
  = render @messages

 .main__footer
  = form_for [@group, @message],html:{class: :main__footer__form} do |f|
   .main__footer__form__input-box
    = f.text_field :text ,class: "main__footer__form__input-box--text", placeholder: "type a message"
    = f.label :image, class: "main__footer__form__input-box--icon" do
     = icon('fas', 'image')
     = f.file_field :image, class: "main__footer__form__input-box--icon--none"
   = f.submit "Send",class: "main__footer__form--send"