.side
  .side__header
    .side__header__user
      .side__header__user--name
        = current_user.name
      .side__header__user--icon
        =link_to new_group_path, class: "side__header__user--icon side__header__user--create" do
          = icon("far", "clone")
          %span<>
        =link_to edit_user_path(current_user), class: "side__header__user--icon side__header__user--edit" do
          = icon("fas", "cog")
  .side__group
    - current_user.groups.each do |group|
      =  link_to group_messages_path(group) do
        .side__group--group-name
          = group.name
        .side__group--notice
          = group.show_last_message

